{% block body %}
{% verbatim %}

<style>
      #map-canvas {
        height: 100%;
        margin: 0px;
        padding: 0px
      }
    </style>


<div style="height: 10px"></div>

<h3><span class="col1">Les pays visit&eacute;s</span></h3>
<div>Une carte repr&eacute;sentant les pays ou nous sommes all&eacute;s, et les photographies associ&eacute;es</div>
<div style="display: flex"><div style="background: #CC0000;width:20px;height: 14px;"></div>&nbsp;Galerie Accessible</div>
<div style="display: flex"><div style="background: #FF6633;width:20px;height: 14px;"></div>&nbsp;Galerie non accessible</div>
<div id="wrapper" style="margin-right: auto; margin-left: auto; text-align:center">
<div style="height: 10px"></div>
<center>
<div style="display: inline-flex"><div id="world-map" style="width: 800px; height: 400px"></div></div>
</center>
</div>
  <script>

countryList=[];
countryListColor={}
countryMap={}
function displayInfo(code) {
	if ($.inArray(code,countryList)!=-1)
		$('#mappy').html('Pays '+code);
}

function showCountry(code) {
        if (countryMap[code]!=1)
                return 0;

	$( "#dialog").html("<b>Cliquez pour acc&egrave;der a la galerie :</b><br /><br />")
	$( "#dialog" ).dialog( "open" );
	$.get("api/v1/country/"+code,function(data){
		var arrayLength = data.length;
		for (var i = 0; i < arrayLength; i++) {
			$( "#dialog" ).html( $( "#dialog" ).html() + '<a href="album?id_album='+data[i].id+'">'+ data[i].date + ":"+data[i].name+"<br />"+'</a>');
		}
	});
}
</script>
<script>

$(document).ready(function() {
		console.log("test13");

      $.get('/api/v1/country',function(data) {
      countryList=[];
      countryListColor={}
      countryMap=data;
      for (var prop in countryMap) {
        if (countryMap.hasOwnProperty(prop)) {
                if (countryMap[prop]==1){
                        countryList.push(prop);
                        countryListColor[prop]='#CC0000';
                } else
                        countryListColor[prop]='#FF6633';
        }
      }
	      $('#world-map').vectorMap({
		map: 'world_mill_en',
		onRegionClick: function (event, code) {
			showCountry(code);
	        },
		onRegionOver: function(event,code) {
		//	displayInfo(code);
		},
		onRegionTipShow: function(e, label, code) {
        	
			if ((!countryMap.hasOwnProperty(code)) || (countryMap[code]==0)) {
	        	    // the hovered region is not part of the regionResults, don't show the label
      		  	    //e.preventDefault();
	        	    return true;
        		}else {
				label.html('<img src="/images/countryflag/' + code.toString() + '.png" /> ' + label.html() + '<hr noshade="noshade" style="height: 1px"/>' + 'Cliquez pour voir la galerie');
			}
		},
        	focusOn: {
    	  		x: 0,
      	  		y: 0,
          		scale: 1
        	},
	    	series: {
	      		regions: [{
        			values: countryListColor
		      	}]
		}
	});
	})});

$(function() {
    $( "#dialog" ).dialog({
	
      height: 550,
      width: 550,
      modal: false,
	zIndex: 1000,
      autoOpen: false,
      show: {
        effect: "blind",
        duration: 1000
      },
      hide: {
        effect: "explode",
        duration: 1000
      }
    });

  });
  </script>
<div id="dialog" title="Liste des galeries du pays">
</div>
